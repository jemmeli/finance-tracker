<h1> Friends </h1>

<div class="row">
		<div class="col-md-9">

			<table class="table table-bordered table-hover">
			    <thead>
			        <tr>
			            <th>ID</th>
			            <th>EMAIL</th>
			        </tr>
			    </thead>
			    <tbody>

					<% @friends.each do |friend| %>
						<tr>
							<td><%= friend.id %></td>
				            <td><%= friend.email %></td>
				        </tr>
					<% end %>

				</tbody>
		</table>
		
	</div>
</div>